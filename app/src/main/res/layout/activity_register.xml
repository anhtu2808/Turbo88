<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36dp"
        android:paddingBottom="36dp">

        <TextView
            android:id="@+id/tvRegTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_account_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFDA6A"
            android:gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRegSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_account_sub"
            android:textSize="14sp"
            android:textColor="#E6F0FA"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvRegTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/panelReg"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_bg"
            android:padding="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvRegSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="6dp">

            <ImageView
                android:id="@+id/imgRegLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/turbo_logo"
                android:contentDescription="@string/turbo_logo_desc"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:scaleType="centerInside" />

            <EditText
                android:id="@+id/etRegUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_username"
                android:inputType="text"
                android:autofillHints="username"
                android:background="@drawable/input_bg"
                android:drawablePadding="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingStart="12dp"
                android:textColor="#05396B"
                android:textColorHint="#7FAECF"
                android:imeOptions="actionNext"
                android:layout_marginTop="6dp" />

            <EditText
                android:id="@+id/etRegPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:autofillHints="password"
                android:background="@drawable/input_bg"
                android:drawablePadding="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingStart="12dp"
                android:textColor="#05396B"
                android:textColorHint="#7FAECF"
                android:imeOptions="actionNext"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/etRegConfirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_confirm_password"
                android:inputType="textPassword"
                android:autofillHints="password"
                android:background="@drawable/input_bg"
                android:drawablePadding="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingStart="12dp"
                android:textColor="#05396B"
                android:textColorHint="#7FAECF"
                android:imeOptions="actionDone"
                android:layout_marginTop="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegisterAction"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/action_sign_up"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_primary"
                android:backgroundTint="@null"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvRegFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/register_footer"
            android:textSize="12sp"
            android:textColor="#BFD9F2"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/panelReg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
