<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1224">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#111428"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Privacy Policy"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:text="This Privacy Policy explains how we collect, use, and protect your information.\n\n
1. Information Collection:\nWe may collect username, email, and basic usage data.\n\n
2. Information Usage:\nYour information is used to improve service quality and provide a personalized experience.\n\n
3. Data Protection:\nWe use industry-standard security measures to protect your data.\n\n
4. Contact:\nFor questions, please contact support@turbo88.com."/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
