<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_bg"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Race Results"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:id="@+id/podiumContainer"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp">

            <!-- Second -->
            <LinearLayout
                android:id="@+id/colSecond"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgSecond"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:layout_marginBottom="4dp" />
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:background="@drawable/podium_block_second"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:id="@+id/tvSecondName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Nizza"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                    <TextView
                        android:id="@+id/tvSecondLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#2"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp" />
                    <TextView
                        android:id="@+id/tvSecondPayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- First -->
            <LinearLayout
                android:id="@+id/colFirst"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgFirst"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:layout_marginBottom="4dp" />
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="160dp"
                    android:background="@drawable/podium_block_first"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="6dp">
                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Turbo"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                    <TextView
                        android:id="@+id/tvFirstLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp" />
                    <TextView
                        android:id="@+id/tvFirstPayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Third -->
            <LinearLayout
                android:id="@+id/colThird"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgThird"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:layout_marginBottom="4dp" />
                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="100dp"
                    android:background="@drawable/podium_block_third"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:id="@+id/tvThirdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Chuppy"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                    <TextView
                        android:id="@+id/tvThirdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#3"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp" />
                    <TextView
                        android:id="@+id/tvThirdPayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fourth -->
            <LinearLayout
                android:id="@+id/colFourth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgFourth"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:layout_marginBottom="4dp" />
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/podium_block_fourth"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:id="@+id/tvFourthName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Burn"
                        android:textColor="#ffffff"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                    <TextView
                        android:id="@+id/tvFourthLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#4"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp" />
                    <TextView
                        android:id="@+id/tvFourthPayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvBetResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close" />
    </LinearLayout>
</ScrollView>