<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_bg"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Race Results"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- PODIUM -->
        <LinearLayout
            android:id="@+id/podiumContainer"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp">

            <!-- Second -->
            <LinearLayout
                android:id="@+id/colSecond"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSecond"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:contentDescription="@string/app_name"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="110dp"
                    android:background="@drawable/podium_block_second"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tvSecondName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Nizza"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/tvSecondLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#2"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- First -->
            <LinearLayout
                android:id="@+id/colFirst"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFirst"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:contentDescription="@string/app_name"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    android:background="@drawable/podium_block_first"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Turbo"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/tvFirstLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Third -->
            <LinearLayout
                android:id="@+id/colThird"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgThird"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:contentDescription="@string/app_name"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="90dp"
                    android:background="@drawable/podium_block_third"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tvThirdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Chuppy"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/tvThirdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#3"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvBetResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close" />
    </LinearLayout>
</ScrollView>