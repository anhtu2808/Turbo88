<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_bg"
    android:orientation="horizontal"
    android:padding="20dp"
    android:gravity="center_vertical">

    <!-- Trái: Podium -->
    <LinearLayout
        android:id="@+id/podiumSide"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Race Results"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/podiumContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp">

            <!-- Second -->
            <LinearLayout
                android:id="@+id/colSecond"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSecond"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:contentDescription="@string/app_name"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="110dp"
                    android:background="@drawable/podium_block_second"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tvSecondName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Nizza"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/tvSecondLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#2"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- First -->
            <LinearLayout
                android:id="@+id/colFirst"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFirst"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:contentDescription="@string/app_name"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    android:background="@drawable/podium_block_first"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Turbo"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/tvFirstLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Third -->
            <LinearLayout
                android:id="@+id/colThird"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgThird"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_snail_placeholder"
                    android:contentDescription="@string/app_name"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="90dp"
                    android:background="@drawable/podium_block_third"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tvThirdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="Chuppy"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/tvThirdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#3"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Phải: thông tin -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:fillViewport="true"
        android:paddingStart="24dp"
        android:paddingEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">

            <TextView
                android:id="@+id/tvBetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnClose"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Close"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>