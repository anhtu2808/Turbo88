<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Turbo88">

        <activity
            android:name=".ui.ResultActivity"
            android:theme="@style/Theme.ResultDialog"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".ui.BettingActivity"
            android:exported="false" />

        <activity
            android:name=".ui.TopUpActivity"
            android:exported="false" />

        <activity
            android:name=".ui.TransactionHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".ui.MenuActivity"
            android:exported="false" />

        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".ui.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ✅ Thêm mới -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.PrivacyPolicyActivity"
            android:exported="false" />

        <activity
            android:name=".ui.TermsOfServiceActivity"
            android:exported="false" />
        <activity
            android:name=".UserManualActivity"
            android:exported="false" />

    </application>

</manifest>
